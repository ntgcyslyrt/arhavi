<% if probationlocation = ProbationLocation.find(:first, :conditions => {:id => params[:id]}) %>
  <form class="form-horizontal" >
    <fieldset>
      <legend>Öğrenci Staj Bilgi Formu</legend>
      <div class="control-group">
        <label class="control-label" for="input16">Öğrenci Numarası</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= probationlocation.student_no %></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Staj Türü</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= probationlocation.probation_type %></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Kurum Adı</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= probationlocation.institute_name %></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Başlangıç Tarihi</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= probationlocation.start_date %></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input16">Bitiş Tarihi</label>
        <div class="controls">
          <textarea type="text" class="input-xlarge disable" id="disabledInput" disabled="" rows="5" name="address"><%= probationlocation.finish_date %></textarea>
        </div>
      </div>
    </fieldset>
  </form>
<% else %>
  <center>
    Böyle Bir Kullanıcı Bulunamadı
  </center>
<% end %>

